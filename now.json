{
  "version": 2,
  "regions": ["bru1"],
  "scope": "derkonzert",
  "env": {
    "JWT_SECRET": "@dk3-jwt-secret",
    "SENDGRID_API_KEY": "@dki-sendgrid-api",
    "MONGODB_URI": "@dk3-mongodb-uri",
    "SENTRY_DSN": "@dk3-sentry-dsn"
  },
  "build": {
    "env": {
      "DOCZ_BASE": "/ui/",
      "SENTRY_DSN_FRONTEND": "@dk3-sentry-dsn-frontend"
    }
  },
  "builds": [
    { "src": "services/auth/lib/auth.js", "use": "@now/node" },
    { "src": "services/api/lib/api.js", "use": "@now/node" },
    { "src": "services/cron/lib/cron.js", "use": "@now/node" },
    { "src": "services/webcal/lib/webcal.js", "use": "@now/node" },
    {
      "src": "services/social-cards/card.js",
      "use": "@now/node",
      "config": { "maxLambdaSize": "42mb" }
    },
    { "src": "frontend/static/*", "use": "@now/static" },
    {
      "src": "frontend/main/package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
    {
      "src": "/login",
      "status": 301,
      "headers": {
        "Location": "/account/login"
      }
    },
    {
      "src": "/pages/about",
      "status": 301,
      "headers": {
        "Location": "/about"
      }
    },
    {
      "src": "/pages/imprint",
      "status": 301,
      "headers": {
        "Location": "/imprint"
      }
    },
    {
      "src": "/pages/privacy",
      "status": 301,
      "headers": {
        "Location": "/privacy"
      }
    },
    {
      "src": "/concert-archive",
      "status": 301,
      "headers": {
        "Location": "/archive"
      }
    },
    {
      "src": "/add-concert",
      "status": 301,
      "headers": {
        "Location": "/add-new-event"
      }
    },
    {
      "src": "/auth/verify-email/(.*)",
      "methods": ["GET"],
      "dest": "/services/auth/lib/auth.js?operation=verify-email&token=$1"
    },
    {
      "src": "/auth/(.*)",
      "methods": ["OPTIONS", "POST"],
      "dest": "/services/auth/lib/auth.js?operation=$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/cron",
      "methods": ["GET"],
      "dest": "/services/cron/lib/cron.js"
    },
    {
      "src": "/webcal/(.*).ics$",
      "dest": "/services/webcal/lib/webcal.js?token=$1"
    },
    {
      "src": "/api",
      "methods": ["OPTIONS", "POST"],
      "dest": "/services/api/lib/api.js",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/social-card/(.*).png$",
      "methods": ["GET"],
      "dest": "/services/social-cards/card.js?path=$1"
    },
    {
      "src": "/ui/(.*)",
      "dest": "/libs/ui/$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/account/setup/(?<step>.*)",
      "dest": "/frontend/main/account/setup?step=$step",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/event/(.)*-(?<eventId>.*)$",
      "methods": ["GET"],
      "dest": "frontend/main/event?eventId=$eventId",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/event-card/(.)*-(?<eventId>.*)$",
      "methods": ["GET"],
      "dest": "frontend/main/event-card?eventId=$eventId",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/update-event/(?<eventId>.*)$",
      "methods": ["GET"],
      "dest": "frontend/main/update-event?eventId=$eventId",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/static/(.*)",
      "dest": "frontend/static/$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/_next/static/.*",
      "headers": { "Cache-Control": "max-age=31556926" },
      "continue": true
    },
    { "src": "(?!/?blog)(.*)", "dest": "frontend/main$1" }
  ]
}
