{
  "version": 2,
  "alias": "derkonzert.de",
  "regions": ["bru1"],
  "env": {
    "JWT_SECRET": "@dk3-jwt-secret",
    "SENDGRID_API_KEY": "@dki-sendgrid-api",
    "MONGODB_URI": "@dk3-mongodb-uri",
    "SENTRY_DSN": "@dk3-sentry-dsn"
  },
  "build": {
    "env": {
      "DOCZ_BASE": "/ui/",
      "SENTRY_DSN_FRONTEND": "@dk3-sentry-dsn-frontend"
    }
  },
  "builds": [
    { "src": "services/auth/lib/auth.js", "use": "@now/node" },
    { "src": "services/api/lib/api.js", "use": "@now/node" },
    { "src": "services/cron/lib/cron.js", "use": "@now/node" },
    { "src": "services/redirects/lib/redirects.js", "use": "@now/node" },
    { "src": "services/webcal/lib/webcal.js", "use": "@now/node" },
    { "src": "libs/ui/package.json", "use": "@now/static-build" },
    { "src": "frontend/static/*", "use": "@now/static" },
    {
      "src": "frontend/account/next.config.js",
      "use": "@now/next@0.0.85-canary.9"
    },
    {
      "src": "frontend/pages/next.config.js",
      "use": "@now/next@0.0.85-canary.9"
    },
    {
      "src": "frontend/main/next.config.js",
      "use": "@now/next@0.0.85-canary.9"
    }
  ],
  "routes": [
    {
      "src": "/concert/(?<concertSlug>.*)",
      "methods": ["GET"],
      "dest": "/services/redirects/lib/redirects.js?url=/concert/$concertSlug"
    },

    {
      "src": "/login",
      "status": 301,
      "headers": {
        "Location": "/account/login"
      }
    },
    {
      "src": "/stay-up-to-date",
      "status": 301,
      "headers": {
        "Location": "/pages/about"
      }
    },
    {
      "src": "/about",
      "status": 301,
      "headers": {
        "Location": "/pages/about"
      }
    },
    {
      "src": "/news",
      "status": 301,
      "headers": {
        "Location": "/pages/about"
      }
    },
    {
      "src": "/imprint",
      "status": 301,
      "headers": {
        "Location": "/pages/imprint"
      }
    },
    {
      "src": "/privacy",
      "status": 301,
      "headers": {
        "Location": "/pages/privacy"
      }
    },
    {
      "src": "/concert-archive",
      "status": 301,
      "headers": {
        "Location": "/archive"
      }
    },
    {
      "src": "/add-concert",
      "status": 301,
      "headers": {
        "Location": "/add-new-event"
      }
    },
    {
      "src": "/auth/verify-email/(.*)",
      "methods": ["GET"],
      "dest": "/services/auth/lib/auth.js?operation=verify-email&token=$1"
    },
    {
      "src": "/auth/(.*)",
      "methods": ["OPTIONS", "POST"],
      "dest": "/services/auth/lib/auth.js?operation=$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/cron",
      "methods": ["GET"],
      "dest": "/services/cron/lib/cron.js"
    },
    {
      "src": "/webcal/(.*).ics$",
      "dest": "/services/webcal/lib/webcal.js?token=$1"
    },
    {
      "src": "/api",
      "methods": ["OPTIONS", "POST"],
      "dest": "/services/api/lib/api.js",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/ui/(.*)",
      "dest": "/libs/ui/$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/account/setup/(?<step>.*)",
      "dest": "/frontend/account/setup?step=$step",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/account/(.*).(js|css)",
      "dest": "/frontend/account/$1.$2",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/account/(.*)",
      "dest": "/frontend/account/$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/pages/(.*)",
      "dest": "/frontend/pages/$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/event/(.)*-(?<eventId>.*)$",
      "methods": ["GET"],
      "dest": "frontend/main/index?showEvent=1&eventId=$eventId",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/update-event/(?<eventId>.*)$",
      "methods": ["GET"],
      "dest": "frontend/main/update-event?eventId=$eventId",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/add-new-event$",
      "methods": ["GET"],
      "dest": "frontend/main/index?addEvent=true",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/mine$",
      "methods": ["GET"],
      "dest": "frontend/main/index?showMine=true",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/static/(.*)",
      "dest": "frontend/static/$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/pwabuilder-sw.js",
      "dest": "frontend/static/pwabuilder-sw.js",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/pwabuilder-sw-register.js",
      "dest": "frontend/static/pwabuilder-sw-register.js",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/",
      "dest": "frontend/main/index",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/(.*).(js|css)",
      "dest": "/frontend/main/$1.$2",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "Cache-Control": "public, s-maxage=31536000, max-age=31536000"
      }
    },
    {
      "src": "^/(.*)$",
      "dest": "frontend/main/$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    }
  ]
}
