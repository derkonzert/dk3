{
  "version": 2,
  "alias": "stage.dk3.tech",
  "regions": ["bru1"],
  "env": {
    "JWT_SECRET": "@dk3-jwt-secret",
    "SENDGRID_API_KEY": "@dki-sendgrid-api",
    "MONGODB_URI": "@dk3-mongodb-uri",
    "SENTRY_DSN": "@dk3-sentry-dsn"
  },
  "build": {
    "env": {
      "DOCZ_BASE": "/ui/"
    }
  },
  "builds": [
    { "src": "services/auth/lib/auth.js", "use": "@now/node" },
    { "src": "services/api/lib/api.js", "use": "@now/node" },
    { "src": "services/cron/lib/cron.js", "use": "@now/node" },
    { "src": "libs/ui/package.json", "use": "@now/static-build" },
    { "src": "frontend/static/*", "use": "@now/static" },
    {
      "src": "frontend/account/next.config.js",
      "use": "@now/next@0.0.85-canary.9"
    },
    {
      "src": "frontend/main/next.config.js",
      "use": "@now/next@0.0.85-canary.9"
    }
  ],
  "routes": [
    {
      "src": "/auth/verify-email/(.*)",
      "methods": ["GET"],
      "dest": "/services/auth/lib/auth.js?operation=verify-email&token=$1"
    },
    {
      "src": "/auth/(.*)",
      "methods": ["OPTIONS", "POST"],
      "dest": "/services/auth/lib/auth.js?operation=$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/cron",
      "methods": ["GET"],
      "dest": "/services/cron/lib/cron.js"
    },
    {
      "src": "/api",
      "methods": ["OPTIONS", "POST"],
      "dest": "/services/api/lib/api.js",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/ui/(.*)",
      "dest": "/libs/ui/$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/account/(.*)",
      "dest": "/frontend/account/$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/c/(.)*-(?<eventId>.*)$",
      "methods": ["GET"],
      "dest": "frontend/main/c?eventId=$eventId",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/add-new-event$",
      "methods": ["GET"],
      "dest": "frontend/main/index?addEvent=true",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/static/(.*)",
      "dest": "frontend/static/$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/pwabuilder-sw.js",
      "dest": "frontend/static/pwabuilder-sw.js",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/pwabuilder-sw-register.js",
      "dest": "frontend/static/pwabuilder-sw-register.js",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/",
      "dest": "frontend/main/index",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "^/(.*)$",
      "dest": "frontend/main/$1",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    }
  ]
}
